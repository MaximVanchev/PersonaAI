generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model Persona {
  id           Int       @id @default(autoincrement())
  name         String
  role         String
  age          Int
  gender       String
  tone         String?
  expertise    String?
  biography    String?
  goal         String?
  temperature  Float?
  model        String?
  systemPrompt String?
  createdAt    DateTime  @default(now())

  // Relationships
  conversations Conversation[]

  @@index([name])
  @@index([role])
}

model Conversation {
  id           Int          @id @default(autoincrement())
  personaId    Int
  persona      Persona      @relation(fields: [personaId], references: [id])
  title        String?
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt

  messages     Message[]

  @@index([personaId])
  @@index([createdAt])
}

model Message {
  id              Int          @id @default(autoincrement())
  conversationId  Int
  conversation    Conversation @relation(fields: [conversationId], references: [id])
  sender          MessageType
  content         String
  createdAt       DateTime     @default(now())

  @@index([conversationId])
  @@index([createdAt])
}

enum MessageType {
  USER
  BOT
}

model File {
  id            Int   @id @default(autoincrement())
  fileName      String
  content       Json
  createdAt DateTime @default(now())
}